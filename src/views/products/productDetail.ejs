<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>

<!-- nuestros css -->
    <link rel="stylesheet" href="/css/headerFooter.css">
    <link rel="stylesheet" href="/css/productDetail.css">

<!-- nuestros scripts para el carrito -->

    <script src='/js/cartValidation.js'></script>

    <!-- JS front search (todas las vistas) -->
    <script src="/js/headerDropdowns.js"></script>

    <title>Intercel - Detalle</title>
</head>
<body>
    <!-- HEADER -->
    <%- include('../partials/header') %>

    
    
    <main>
        <a href="/products/list">Volver al Listado</a>
        <section class="productContainer">

            <article class="minorPhotosContainer">
                <% cellphones.forEach(cell => { %>
                    <div class="imgContainer">
                        <img src="/images/cellphones/<%= brand.name %>/<%= model.model %>/<%= cell.imageOne%>" alt="Preview <%= model.model %>">
                        <img src="/images/cellphones/<%= brand.name %>/<%= model.model %>/<%= cell.imageTwo%>" alt="Preview <%= model.model %>">
                        <img src="/images/cellphones/<%= brand.name %>/<%= model.model %>/<%= cell.imageThree%>" alt="Preview <%= model.model %>">
                    </div>
                                   
                <% }) %>
            </article>
           
            <article class="mainPhotoContainer">
                <div>
                    <img src="/images/cellphones/models/<%=model.mainImage%>" alt="Celular  <%= model.model %>" class="mainImage">
                </div>
            </article>
                
            <article class="containerInformation">
                <section>
                    <h2 class="brand"><%= brand.name %></h2>
                    <h1 class="phoneName"><%= model.model %></h1>
                    <p class="description"><%= model.description %></p>
                </section>
                
                <section class="bottomInfo">
                    <% if (cellphones.length == 0) { %>
                        <div>    
                            <h3 style="color:firebrick">Sin Stock</h3>
                        </div>
                        
                        <% } else { %>            
                            <% cellphones.forEach(cell => { %>
                                
                                <div class="stockContainer">
                                    <div>    
                                        <h3>Color</h3>
                                        <p class="color"><%= cell.color.name %> </p>
                                    </div>
                                    
                                    <div>
                                        <h3>Memoria Ram</h3>
                                        <p class="ram"><%= cell.ram.storage %> </p>
                                    </div>
                                    
                                    <div>
                                        <h3><%= cell.offer == 0 ? 'Precio' : 'En Oferta' %></h3>
                                        <p class="price">US$ <%= cell.price %> </p>
                                    </div>
                                                    
                                    <button class="button">Agregar al Carrito  <i class="fas fa-shopping-cart" id="carritoIconBody"></i></button>
                                    
                                </div>
                            <% }) %>      
                        <% } %>
                
                            
                    </section>

                
            </article>
        
        </section>
        <section class="containerRelated">
            
            <div class="InformationRelated">
                <p class="brandRelated">MÃ¡s de <span><%= brand.name %></span></p>
                <div class="logoRelated"><img src="/images/logos/<%=brand.name %>.svg" alt="Samsung Logo"></div>
            </div>
            <% relatedList.forEach(e => {%>
                <div class="photoContainerRelated">
                    <a href="/products/<%=e.id%>"><img src="/images/cellphones/models/<%=e.mainImage%>" alt="Preview <%=e.model%>"><p class="NameRelated"><%=e.model%></p></a>  

                </div>
            <%}); %>


        </section>
        

    </main>

    <!-- FOOTER -->
    <%- include('../partials/footer') %>
</body>
</html>