<body>   
    <div  class="boton-volver"><a href="/"><i class="fas fa-arrow-left"></i>    Volver</a></div>
    <main>

    <div class="contenedor">
        <a href="/"> <img src="/images/logos/Logo.svg" width="200"> </a>
        <h2>Iniciar sesión</h2>
        <form class="create-form" action="/users/login" method="POST">
    
            <div class="control-formulario">
                <label>Nombre de usuario</label>
                <input type="text" name="usuario" class="control" required>
            </div>
            <div class="control-formulario">
                <label>Contraseña</label>
                <input type="password" name="contrasena" class="control" required>
                <div class="textos"><a href="#"> Olvidé mi contraseña</a></div>
            </div>
           <br>
            <button type="menu" class="boton-formulario">Iniciar sesión</button>
            <div class="textos">No tienes cuenta?<a href="register"> Registrate</a></div>

        </form>
    </div>
    </main>    

</body>
