<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/headerFooter.css">
    <link rel="stylesheet" href="/css/productsAdmin.css">

    <title>Products</title>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main>
        <p class="blueBar"></p>

    
        <div>
            <button class="button"><a href="/products/create">Agregar</a></button>
            
        </div>
        <section class="products">
                
            <% productList.forEach( e => {%>
                <article>
                <a href="/products/<%=e.id%>">
                    <img src="<%= e.mainImage %>" alt="<%= e.model %>">
                </a>
                    <div class="productFeatures">
                        <h3><%= e.model %></h3>
                        <p><%= e.brand %></p>
                        <ul>
                            <li><%= e.color %></li>
                            <li><%= e.ram %></li>
                        </ul>
                    </div>
  
                    <div class="productPrice">
                        <h3>Precio</h3>
                        <p>US$<%= e.price %></p>
                        <input type="button" value="Agregar al carrito">
                    </div>
                    <div>
                        <form action="/products/<%=e.id%>/editProduct" method="GET">
                            <button class="adminButton" type="submit">Editar</button>
                        </form>
                        <form action="/products/<%=e.id%>?_method=DELETE" method="POST">
                            <button class="adminButton" type="submit">Eliminar</button>
                        </form>
                    </div>
            
    
                </article>
 
            <%}); %> 
        </section>
    </main>

    <!-- FOOTER -->
    <%- include('../partials/footer') %>
</body>
</html>